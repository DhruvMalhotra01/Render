    <script>
        // Background Image on Hover
        const blocks = document.querySelectorAll(".block");
        const wrapper = document.querySelector(".wrapper");
        blocks.forEach(block => {
            block.addEventListener("mouseenter", () => {
                const newImage = block.getAttribute("data-image");
                wrapper.style.backgroundImage = `url('${newImage}')`;
            });
        });

        // Image Slide Controls
        let next = document.querySelector('.next');
        let prev = document.querySelector('.prev');
        next.addEventListener('click', () => {
            let items = document.querySelectorAll('.item');
            document.querySelector('.slide').appendChild(items[0]);
        });
        prev.addEventListener('click', () => {
            let items = document.querySelectorAll('.item');
            document.querySelector('.slide').prepend(items[items.length - 1]);
        });

        // Carousel Functionality
        const carousel = document.querySelector(".carousel");
        const leftArrow = document.querySelector(".left-arrow");
        const rightArrow = document.querySelector(".right-arrow");

        let index = 0;
        const totalCards = document.querySelectorAll(".carousel-card").length;
        const cardsPerView = 3;
        const maxIndex = totalCards - cardsPerView;

        function updateSlide() {
            const cardWidth = document.querySelector(".carousel-card").offsetWidth;
            const gap = 10;
            carousel.style.transform = `translateX(${-index * (cardWidth + gap)}px)`;
        }

        rightArrow.addEventListener("click", () => {
            index = (index < maxIndex) ? index + 1 : 0;
            updateSlide();
        });

        leftArrow.addEventListener("click", () => {
            index = (index > 0) ? index - 1 : maxIndex;
            updateSlide();
        });

        setInterval(() => {
            rightArrow.click();
        }, 3000);
    </script>
